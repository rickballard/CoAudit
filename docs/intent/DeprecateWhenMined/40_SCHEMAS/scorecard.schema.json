{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Repo Advisory Scorecard",
  "type": "object",
  "required": [
    "repo",
    "total",
    "accepted",
    "score"
  ],
  "properties": {
    "repo": {
      "type": "string"
    },
    "total": {
      "type": "integer",
      "minimum": 0
    },
    "accepted": {
      "type": "integer",
      "minimum": 0
    },
    "score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    }
  }
}